type User {
    username: ID! @id
    createdAt: DateTime! @createdAt
    firstname: String!
    surname: String!
    password: String!
    role: Role! @default(value: NONE)
    updates: [Update!]! @relation(onDelete: CASCADE)
}

type Update {
    id: ID! @id
    user: User!
    date: DateTime!
}

enum Role {
    SUPERADMIN
    ADMIN
    BASIC
    NONE
}
